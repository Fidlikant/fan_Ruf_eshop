<%# PRODUCTS %>
<section class="produkt">


<section id="products" class="columns">
  <% @products.each do |product| %>

  <div class="column">

<article class="card">
  <header class="card-image">
    <figure class="image">
    <a href="<%= product_path product.id %>">
      <% if product.image.attached? %>
  
      <%= image_tag product.image, :class => 'default', :alt => "photo of product"%> 

    <% else %>

      <%= image_tag image_path "RufProductOne.png" %> 
  
    <% end %>
    </a>
  </figure>
  </header>
  <div class="card-content">
    <div class="media">
      
      <div class="media-content">
        <p class="title is-4">
        
        <%= link_to product.title, product %>
        
        </p>
        <p class="subtitle is-6">
        
        <%= number_to_currency product.price, :unit => '€', format: "%n %u" %>
        
        </p>
      </div>
    </div>

    <div class="block">
        <a href="#", class="button is-link is-fullwidth">REZERVÁCIA</a>
    </div>


    <div class="content">
    <%= product.description.to_plain_text.truncate(150) %>
    </div>

    <div>
    <p>ID jazdenky: <strong><%= product.id %></strong></p>
    </div><br>

  <%= link_to "✎ Edit", edit_product_path(product), class: "button" %>
  <%= button_to "✖ Delete", product, method: :delete, class: "button", onclick: "return confirm('Are you sure you want to delete this?');" %>
  

  

  </div>
</article>

  </div>
<!--
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p> 
        -->  

  <% end %>

</section>
</section>


