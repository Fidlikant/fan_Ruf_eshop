            position: absolute;
            top: 200px; /* Adjust the top position as needed */
            left: -100%; /* Initial position off-screen */
            transform: translateX(-50%);
        }

        @keyframes slideInText {
            0% {
                left: -100%;
                opacity: 0;
            }
            100% {
                left: 50%; /* Slide in from the left */
                opacity: 1;
            }
        }
        
        /* Add styles for new sections */
